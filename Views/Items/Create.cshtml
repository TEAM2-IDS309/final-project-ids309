@model FinalProjectIDS309.Models.ItemModel

@{
    ViewData["title"] = "New Item";
    string IdCat = ViewBag.IdCat;
}

<section>
    <h1 class="mb-3">Add New Item</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" asp-route-id="@IdCat">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IDCategory" class="control-label">Category</label>
                    <select asp-for="IDCategory" class="form-select" asp-items="ViewBag.Categories" disabled></select>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3"><a asp-action="ByCategory" asp-route-id="@IdCat">Back to List</a></div>
</section>
@*asp-route-id="IdCategory"*@
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
