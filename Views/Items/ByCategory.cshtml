@model FinalProjectIDS309.ViewModels.CategoryItemsViewModel
@{
  ViewData["title"] = @Model.CategoryName;
}

<a asp-controller="Categories" asp-action="Index">Back</a>
<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <p>Category:</p>
    <h1>@Model.CategoryName</h1>
  </div>
    <a type="button" class="btn btn-dark" asp-controller="Category" asp-action="AddItem">Add item</a>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.Items)
    {
      <tr>
        <td>@item.Name</td>
        <td>@item.Description</td>
        <td>@item.Quantity</td>
        <td></td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
          <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
          <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>