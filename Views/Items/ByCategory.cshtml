@model FinalProjectIDS309.ViewModels.CategoryItemsViewModel

@{
  ViewData["title"] = $"{Model.CategoryName} Items";
}

<section>
<p><a asp-controller="Categories" asp-action="Index">Back</a></p>
<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <p class="mb-1">Category:</p>
    <h1>@Model.CategoryName</h1>
  </div>
    <a class="btn btn-dark" asp-route-id="@Model.categoryId"  asp-controller="Items" asp-action="Create">Add item</a>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model.Items)
    {
      <tr>
        <td>@item.Name</td>
        <td>@item.Description</td>
        <td>@item.Quantity</td>
        <td>
          <div class="d-flex gap-3">
            <a asp-action="Edit" asp-route-id="@item.ID" class="text-dark">
                <i class="bi bi-pencil-square"></i>
            </a>
            <a asp-action="Details" asp-route-id="@item.ID" class="text-dark">
                <i class="bi bi-info-circle"></i></a>
            <a asp-action="Delete" asp-route-id="@item.ID" class="text-dark">
                <i class="bi bi-trash"></i>
            </a>
        </div>
        </td>
      </tr>
    }
  </tbody>
</table>
</section>